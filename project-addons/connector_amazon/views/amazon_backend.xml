<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="amazon_backend_view_tree" model="ir.ui.view">
            <field name="name">amazon.backend.view.tree</field>
            <field name="model">amazon.backend</field>
            <field name="arch" type="xml">
                <tree string="Amazon backends">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="amazon_backend_view_form" model="ir.ui.view">
            <field name="name">amazon.backend.view.form</field>
            <field name="model">amazon.backend</field>
            <field name="arch" type="xml">
                <form string="Amazon invoice">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="refresh_token"/>
                                <field name="lwa_app_id"/>
                                <field name="lwa_client_secret" password="True"/>
                                <field name="aws_secret_key" password="True"/>
                                <field name="aws_access_key"/>
                                <field name="role_arn"/>
                                <field name="marketplace"/>
                                <field name="normal_journal_id"/>
                                <field name="simplified_journal_id"/>
                                <field name="refund_journal_id"/>
                                <field name="refund_simplified_journal_id"/>
                                <field name="sale_channel_id"/>
                                <field name="salesperson_id"/>
                                <field name="partner_categ_id"/>
                                <field name="default_fiscal_position_id"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="import" string="Imports">
                                <group>
                                    <button name="import_invoices_last_month" type="object"
                                        class="oe_highlight" string="Import invoices from last 30 days" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="amazon_backend_action" model="ir.actions.act_window">
            <field name="name">Amazon backends</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amazon.backend</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>


        <menuitem name="Amazon" parent="connector.menu_connector_root" id="amazon_connector_menu"/>
        <menuitem id="amazon_backend_menu_act" name="Amazon Backends" parent="amazon_connector_menu" action="amazon_backend_action" sequence="1"/>
    </data>
</openerp>
