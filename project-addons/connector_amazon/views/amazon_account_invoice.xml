<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="amazon_account_invoice_view_tree" model="ir.ui.view">
            <field name="name">amazon.account.invoice.view.tree</field>
            <field name="model">amazon.account.invoice</field>
            <field name="arch" type="xml">
                <tree string="Amazon invoices" colors="blue:state == 'draft';black:state == 'downloaded';red:state == 'error';green:state == 'invoiced'">
                    <field name="order_ref"/>
                    <field name="invoice_number"/>
                    <field name="invoice_date"/>
                    <field name="partner_vat"/>
                    <field name="partner_country"/>
                    <field name="country_id"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="amazon_account_invoice_view_form" model="ir.ui.view">
            <field name="name">amazon.account.invoice.view.form</field>
            <field name="model">amazon.account.invoice</field>
            <field name="arch" type="xml">
                <form string="Amazon invoice">
                    <header>
                        <button name="download_order_data" type="object" string="download data" attrs="{'invisible': [('state', 'not in', ('draft', 'error'))]}"/>
                        <button name="create_invoice" type="object" string="PRUEBA"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="order_ref"/>
                                <field name="invoice_id"/>
                                <field name="invoice_number"/>
                                <field name="invoice_date"/>
                                <field name="invoice_type"/>
                                <field name="partner_id"/>
                                <field name="partner_vat"/>
                                <field name="partner_name"/>
                                <field name="partner_email"/>
                                <field name="partner_street"/>
                                <field name="partner_street2"/>
                                <field name="partner_city"/>
                                <field name="partner_zip"/>
                                <field name="partner_state"/>
                                <field name="partner_country"/>
                                <field name="country_id"/>
                                <field name="intracommunity"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="lines">
                                <field name="invoice_line_ids">
                                    <tree editable="top">
                                        <field name="reference"/>
                                        <field name="product_id"/>
                                        <field name="amount_untaxed"/>
                                        <field name="amount_tax"/>
                                        <field name="amount_total"/>
                                        <field name="quantity"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                        </notebook>
                        <field name="amz_status"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="amazon_account_invoice_view_search" model="ir.ui.view">
            <field name="name">amazon.account.invoice.view.search</field>
            <field name="model">amazon.account.invoice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="order_ref"/>
                    <field name="invoice_number"/>
                    <field name="partner_id"/>
                    <field name="partner_vat"/>
                    <field name="partner_name"/>
                    <field name="country_id"/>
                    <filter name="pending" string="Pending" domain="[('state', '=', 'draft')]"/>
                    <filter name="downloaded" string="Downloaded" domain="[('state', '=', 'downloaded')]"/>
                    <filter name="error" string="With errors" domain="[('state', '=', 'error')]"/>
                    <filter name="invoiced" string="Invoiced" domain="[('state', '=', 'invoiced')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Amazon state" context="{'group_by': 'amz_status'}"/>
                        <filter string="State" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="amazon_account_invoice_action" model="ir.actions.act_window">
            <field name="name">Amazon invoices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amazon.account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_pending': 1,
                                   'search_default_downloaded': 1,
                                   'search_default_error': 1}</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="amazon_account_invoice_view_search"/>
        </record>

        <menuitem id="amazon_account_invoice_menu_act" name="Amazon invoices" parent="amazon_connector_menu" action="amazon_account_invoice_action" sequence="22"/>
    </data>
</openerp>
